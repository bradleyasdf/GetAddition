favPoster=function(A){function B(F,G,E){if(E){B(F,E)}if(F&&G&&typeof G=="object"){for(var D in G){F[D]=G[D]}}return F}function C(){var D=document.createElement("form");D.style.display="none";B(D,A,{method:"post",target:"_blank"});document.body.appendChild(D);D.addItem=function(G,E){var F=document.createElement("input");F.name=G;F.value=E;D.appendChild(F)};return D}return{list:function(){this.f=f=C();return{addItem:function(G,D){if(!D){if(!this.k){this.k=0}var F="f["+(this.k++)+"]";for(var E in G){f.addItem([F+"."+E],G[E])}}else{for(var E in G){f.addItem(E,G[E])}}}}},open:function(){this.f.submit();document.body.removeChild(this.f)}}}

var fav_poster;
function checkSub_new(obj){
	
	fav_poster = new favPoster({
		action : 'http://mylib.duxiu.com/a/f.action',
		method :'post',
		target : '_blank'	
	});
	 
	var check=0;
	var list = fav_poster.list();
	var checkbox = document.getElementsByName("b");
	var dxid="";
	var classify="" ;
	if(document.getElementById("classifyfav"))
		classify=document.getElementById("classifyfav").value;
	for (var i = 0; i < checkbox.length; i++) {
		if (checkbox[i].checked == true) {
			if(document.getElementById("dxid" + i))
				dxid=document.getElementById("dxid" + i).value;
			list.addItem({
				title: document.getElementById("title" + i).value.replaceAll("<font color=Red>","").replaceAll("</font>",""),
				url: document.getElementById("url" + i).value,
				dxid: dxid,
				memo: document.getElementById("memo" + i).value.replaceAll("<font color=Red>","").replaceAll("</font>",""),
				classify:classify
			});
			check++;
			dxid="";
		}
	}

	if(!list.k){
		alert("请选择要收藏的内容");
		return false;
	}
	if(window.location.host.indexOf("duxiu.com")!=-1){
		list.addItem({
			ec : 'utf-8',
			unitid : aid,
			refer : "1"
		},true);
	}else {
		list.addItem({
			ec : 'utf-8'
		},true);
	}
	
	
	if(check>0)
		fav_poster.open();
		else
	alert("请选择要收藏的内容");
	return false;
}

function bulkdeal(obj,type){
	
	fav_poster = new favPoster({
		action : 'http://mylib.duxiu.com/a/f.action',
		method :'post',
		target : '_blank'	
	});
	 
	var check=0;
	var list = fav_poster.list();
	var checkbox = document.getElementsByName("b");
	var dxid="";
	var classify="" ;
	if(document.getElementById("classifyfav"))
		classify=document.getElementById("classifyfav").value;
	for (var i = 0; i < checkbox.length; i++) {
		if (checkbox[i].checked == true) {
			if(document.getElementById("dxid" + i))
				dxid=document.getElementById("dxid" + i).value;
			list.addItem({
				title: document.getElementById("title" + i).value.replaceAll("<font color=Red>","").replaceAll("</font>",""),
				url: document.getElementById("url" + i).value,
				dxid: dxid,
				memo: document.getElementById("memo" + i).value.replaceAll("<font color=Red>","").replaceAll("</font>",""),
				classify:classify
			});
			check++;
			dxid="";
		}
	}

	if(!list.k){
		alert("请选择要交易的内容");
		return false;
	}	
	list.addItem({
		cataid : type,
		ec : 'utf-8'
	},true);
	
	if(check>0)
		fav_poster.open();
		else
	alert("请选择要交易的内容");
	return false;
}

var add_input_unit = false;  //记录是否添加过这样的对象
function subAdd_new(id){
	document.getElementById("titlefav").value=document.getElementById("title"+id).value.replaceAll("<font color=Red>","").replaceAll("</font>","");
	document.getElementById("urlfav").value=document.getElementById("url"+id).value;
	document.getElementById("memofav").value=document.getElementById("memo"+id).value.replaceAll("<font color=Red>","").replaceAll("</font>","");
	if(document.getElementById("dxid"+id))
		document.getElementById("dxidfav").value=document.getElementById("dxid"+id).value;
	if(document.getElementById("cataidfav"))
		document.getElementById("cataidfav").value="";	
	if(!add_input_unit && window.location.host.indexOf("duxiu.com")!=-1){
		var input_unitid = document.createElement("input");
		input_unitid.name ="unitid";
		input_unitid.value =aid;
		input_unitid.type ="hidden";
		var input_refer = document.createElement("input");  //加上来源
		input_refer.name ="refer";
		input_refer.value ="1";
		input_refer.type ="hidden";
		document.getElementById("fav_one").appendChild(input_unitid);
		document.getElementById("fav_one").appendChild(input_refer);
		add_input_unit = true;
	}
	
	document.getElementById("fav_one").action="http://mylib.duxiu.com/a/f.action";
	document.getElementById("fav_one").submit();
}

function deal(id,type){
		if(document.getElementById("cataidfav"))
			document.getElementById("cataidfav").value=type ;
		document.getElementById("titlefav").value=document.getElementById("title"+id).value.replaceAll("<font color=Red>","").replaceAll("</font>","");
		document.getElementById("urlfav").value=document.getElementById("url"+id).value;
		document.getElementById("memofav").value=document.getElementById("memo"+id).value.replaceAll("<font color=Red>","").replaceAll("</font>","");
		if(document.getElementById("dxid"+id))
			document.getElementById("dxidfav").value=document.getElementById("dxid"+id).value;		
		$("fav_one").action="http://mylib.duxiu.com/a/f.action";
		$("fav_one").submit();
			
}

