String.prototype.trim = function() {
    return this.replace(/(^\s+)|(\s+$)/g, "");
}
function $(A){
    return document.getElementById(A)
}
jQuery("document").ready(function(){
	var contentheight = jQuery(".right_com").innerHeight()
	jQuery('.edge_line').css("min-height", contentheight +"px");
});
jQuery(function(){
	jQuery('.content_left h2 b').click(function(){
		jQuery(this).toggleClass('icons_cur');
		jQuery(this).parent().next().toggle();
		jQuery(this).parent().next().next().toggle();
	})
/*	jQuery('.content_left li a').click(function(){
		jQuery('li a').removeClass('current')
		jQuery(this).addClass('current');
	})*/
	jQuery('.content_left .quanbu').click(function(){
		jQuery('.tba_cont').show();
		jQuery('.tba_list ul').hide()
		jQuery('.tba_list a').removeClass('current_c')
	})
	jQuery(".select").each(function(){
		var flag = true;
		var s=jQuery(this);
		var z=parseInt(s.css("z-index"));
		var dt=jQuery(this).children("dt");
		var dd=jQuery(this).children("dd");
		var _show=function(){dd.slideDown(200);dt.addClass("cur");s.css("z-index",z+1);};   //展开效果
		var _hide=function(){dd.slideUp(200);dt.removeClass("cur");s.css("z-index",z);};	//关闭效果
		dt.click(function(){
			flag = false;
			dd.is(":hidden")?_show():_hide();
		});
		dd.find("a").click(function(){dt.html($(this).html());_hide();});	 //选择效果（如需要传值，可自定义参数，在此处返回对应的“value”值 ）
		jQuery("body").click(function(i){
			if(flag){
				_hide();
			}else{
				flag = true;
			}
		});
	})
})

var che = false;
function selectbox(checkboxid){
	if(che == true){
		che = false;
		document.getElementById("sltAll").innerHTML="<b class=\"icons\"></b>全选";
	}else if(che == false){
		che =true;
		document.getElementById("sltAll").innerHTML="<b class=\"icons\"></b>取消";
	}
	var checkbox = document.getElementsByName(checkboxid);
	for(var i = 0 ; i < checkbox.length ; i ++){
		checkbox[i].checked = che;
	}
}

  function Cookie(){
  this.SetValue=function(name,value,hours,path,domain){
    var str=new String();
    var nextTime=new Date();
    nextTime.setHours(nextTime.getHours()+hours);
    str=name+"="+escape(value);
    if(hours)
      str+=";expires="+nextTime.toGMTString();
    if(path)
      str+=";path="+path;
    if(domain)
      str+=";domain="+domain;
    document.cookie=str;
    }
  this.GetValues=function(name){
  	 var rs=new RegExp("(^|)"+name+"=([^;]*)(;|$)","gi").exec(document.cookie),tmp;
    if(tmp=rs)
      return unescape(tmp[2]);
    return null;
    }
  
  this.GetValue=function(name){
  	var cookies=this.GetValues("duxiu");
	  	if(cookies!=null){
	  		var arrCookie=cookies.split(",!");
  			for(var i=0;i<arrCookie.length;i++){
					if((arrCookie[i].split(",=")[0])== name ){
						return arrCookie[i].split(",=")[1];
						break;
					}
			  }
	  		return this.GetValues(name);
	  		}else{
	  			return this.GetValues(name);
	  		}
	  	
    }
  }
  
String.prototype.replaceAll = function(search, replace){
 var regex = new RegExp(search, "g");
 return this.replace(regex, replace);
}
//选择全部
function selectall(box,checkboxid){
	var che;
	if(box.checked == false)
		che = false;
	else
		che =true;
	var checkbox = document.getElementsByName(checkboxid);
	for(var i = 0 ; i < checkbox.length ; i ++)
		checkbox[i].checked = che;
}

//单本书的导出
function selectOneResult(checkboxid){
	document.getElementById(checkboxid).checked =true;//单个图书信息添加选中状态
	selectexecl('b');
	document.getElementById(checkboxid).checked =false;//将选中状态去掉
}

function selectexecl(checkboxid){
	var dxids="";
	var checkbox = document.getElementsByName(checkboxid);
	for(var i = 0 ; i < checkbox.length ; i ++){
		if(checkbox[i].checked ==true)
			dxids+=document.getElementById("dxid"+i).value+",";
	}
	if(dxids=="")
		alert("请选择要导出的记录");
	else{
		document.getElementById("dxids").value=dxids;
		document.getElementById("downexecl").submit();
	}
}

function showemail(){
	document.getElementById("showemail").style.display = "";
}
function selectsendmail(checkboxid){
	var dxids="";
	var checkbox = document.getElementsByName(checkboxid);
	for(var i = 0 ; i < checkbox.length ; i ++){
		if(checkbox[i].checked ==true)
			dxids+=document.getElementById("dxid"+i).value+",";
	}
	var email = document.getElementById("semail").value;
	var zz = /^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/;
	if(email.length==0){
		alert("邮箱不能为空!");
		return;
	}
	if(!zz.test(email)){
		alert("您输入的邮箱的格式错误!");
		return;
	}
	if(dxids=="")
		alert("请选择要发送的记录");
	else{
		document.getElementById("dxids").value=dxids;
		document.getElementById("email").value=email;
		document.getElementById("downexecl").submit();
		document.getElementById("showemail").style.display = "none";
		document.getElementById("semail").value = '';
		document.getElementById("email").value = '';
	}
}


function selecttuijanexecl(){
	var dxids="";
	var icount = document.getElementById("icount");
	if(icount=="0")
		alert("抱歉，没有可导出的数据记录！");
	else{
		document.getElementById("dxids").value=dxids;
		document.getElementById("downexecl").submit();
	}
}

function isSearch(obj) {
	var s=$("sw").value.trim();
	var patrn="\\||\\!|\\@|\\#|\\$|\\%|\\^|\\&|\\*|\\(|\\)|\\_|\\+|\\-|\\}|\\{|\\/|\\.|\\,|\\?|\\>|\\<|\\~|\\、|\\】|\\【|\\‘|\\；|\\’|\\、|\\。|\\，|\\￥|\\……|\\）|\\（|\\！";
	s=s.replaceAll(patrn,"");
	if($("topchannel")){
			$("topchannel").value=$("topchannel").value.replaceAll("searchF","search");
		if($("topchannel").value=="searchBook"){
			$("topchannel").value = "search";
		}
	}
	if(s=='')
	return false
	else
	return true
}
function istopSearch(obj) {
	if($("topbCon").value!="y")
		$("topallsw").value="";
	var s=$("topsw").value.trim();
	var patrn="\\||\\!|\\@|\\#|\\$|\\%|\\^|\\&|\\*|\\(|\\)|\\_|\\+|\\-|\\}|\\{|\\/|\\.|\\,|\\?|\\>|\\<|\\~|\\、|\\】|\\【|\\‘|\\；|\\’|\\、|\\。|\\，|\\￥|\\……|\\）|\\（|\\！";
	s=s.replaceAll(patrn,"");
	$("topchannel").value=$("topchannel").value.replaceAll("searchF","search");
	if($("topchannel").value=="searchBook"){
		$("topchannel").value = "search";
	}
	if($("topchannel").value=="searchDict"){
		$("topuserinput").action="/gosearch.jsp";
	}
	if(s=='')
	return false
	else
	return true
}

