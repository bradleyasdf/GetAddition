function checkLen(term){
 	var textnum=document.getElementById("J_inputTip").innerText=1000-term.value.length;
		if (parseInt(textnum)<=0){
 				alert("您输入的消息过长！");
 				term.value=term.value.substring(0,1000);
		}
}
//判断浏览器是否为IE
function isIEs(){
   return (document.all && window.ActiveXObject && !window.opera) ? true : false;
}

//取得页面的高宽
function getBodySize(){
var bodySize = [];
with(document.documentElement) {
bodySize[0] = (scrollWidth>clientWidth)?scrollWidth:clientWidth;//如果滚动条的宽度大于页面的宽度，取得滚动条的宽度，否则取页面宽度
bodySize[1] = (scrollHeight>clientHeight)?scrollHeight:clientHeight;//如果滚动条的高度大于页面的高度，取得滚动条的高度，否则取高度
}
return bodySize;
}
//创建遮盖层
function popCoverDiv(){
	if (document.getElementById("cover_div")) {//如果存在遮盖层，则让其显示
	document.getElementById("cover_div").style.display = 'block';
	}else{//否则创建遮盖层
		var coverDiv = document.createElement('div');
		document.body.appendChild(coverDiv);
		coverDiv.id = 'cover_div';
		with(coverDiv.style) {
			coverDiv.className='layer';
		    if (isIEs()) {
		   		filter = "Alpha(Opacity=60)";//IE逆境
		    } else {
		  		 opacity = 0.6;
		    }
		       var bodySize = getBodySize();
  			 coverDiv.style.width = bodySize[0] + 'px'
  			  coverDiv.style.height = bodySize[1] + 'px';
		}
	}
}
//打开DIV层
function showopen()
{
	popCoverDiv();
	document.getElementById("adviseForm").style.display="";
	document.getElementById("myf").reset();
}
//关闭DIV层
function showclose(){
    document.body.removeChild(document.getElementById("cover_div"));
    document.getElementById("adviseForm").style.display="none";
}
function addAdvise(){
	    var checkbox = document.getElementsByName("adviceb");
	    var ischeck=0;
	    var advise="";
	    var advisedes="";
		for (var i = 0; i < checkbox.length; i++) {
			if (checkbox[i].checked == true) {
				ischeck=1;
				advise+=checkbox[i].value+",";
			}
		}
		if(ischeck==0){
			alert("请正解填写!感谢您的支持。");
			return false;
		}else{
			advisedes=document.getElementById("advcontent").value;
		}
		
	
	var ajax=null;
	var _url="/advise.jsp?advise="+advise+"&advisedes="+advisedes;
	ajax=new _Ajax().createXMLRequst("get",_url);
		ajax.onreadystatechange = function(){
			if(ajax.readyState==4){
				if(ajax.status==200){
					var sReturn=(ajax.responseText).replace(/(^\s*)|(\s*$)/g,"");
			
					if(sReturn=="1"){
						alert("添加成功!感谢您的支持。"); 
						showclose();
					}else if(sReturn=="0"){
						alert("请正解填写!感谢您的支持。");
					}else{
						alert("添加失败!感谢您的支持。");
					}
				}
			}
		}
	ajax.send(null);

}

